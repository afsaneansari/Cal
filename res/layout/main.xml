        </TableRow>

        <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center_horizontal">
            <Button
                    android:id="@+id/n7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="7" android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingBottom="20dp"/>
            <Button
                    android:id="@+id/n8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="8" android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingBottom="20dp"/>
            <Button
                    android:id="@+id/n9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="9" android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingBottom="20dp"/>

            <Button
                    android:id="@+id/product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="*" android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingBottom="20dp"/>

        </TableRow>
        <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center_horizontal">
            <Button
                    android:id="@+id/n4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="4" android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingBottom="20dp"/>
            <Button
                    android:id="@+id/n5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="5" android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingBottom="20dp"/>
