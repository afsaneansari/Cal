                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="3" android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingBottom="20dp"/>

            <Button
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="-" android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingBottom="20dp"/>

        </TableRow>
        <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center_horizontal">
            <Button
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="." android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingBottom="20dp"/>
            <Button
                    android:id="@+id/n0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="0" android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingBottom="20dp"/>




            <Button
                    android:id="@+id/signal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:text="+-" />

            <Button
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
